{
    "manifest_version": 3,
    "name": "Tab Clustering",
    "description": "my stupid project",
    "permissions": ["tabs", "activeTab", "scripting", "downloads"],
    "version": "1.0",
    "background": { 
      "service_worker": "background.js"
    }, 
    "host_permissions":[
      "*://*/*", 
      "<all_urls>"
    ], 
    "action": {
      "default_popup": "popup.html",
      "default_icon": "./img/icon.png"
    }, 
    "content_scripts": [
      {
        "matches": ["<all_urls>"], 
        "css": ["popup.css"], 
        "js": [ "popup.js", "jquery.js" ]
      }
    ]
  }